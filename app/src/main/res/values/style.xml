<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="tvType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="tvFree">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="tvPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="tvAutherNames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvLicenseName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvTitle">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/toolbarColor</item>
    </style>

</resources>