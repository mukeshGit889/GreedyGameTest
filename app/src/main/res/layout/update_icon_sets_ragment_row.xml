<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardMaxElevation="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIconNameId"
                style="@style/tvName"
                android:text="Name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTypeId"
                style="@style/tvType"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIconNameId" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFreeId"
                style="@style/tvFree"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/free_background"
                android:text="Free"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeId" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPriceId"
                style="@style/tvPrice"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAutherNameId"
                style="@style/tvAutherNames"
                android:text="Auther's Name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPriceId" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLicenceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="right"
                android:paddingStart="@dimen/_50sdp"
                android:paddingLeft="@dimen/_50sdp"
                android:text="License Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvFreeId"
                app:layout_constraintTop_toBottomOf="@+id/tvAutherNameId" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

